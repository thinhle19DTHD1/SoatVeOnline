@using WebSoatVeOnline.Models;
@model List<DiaDiem>
<div class="container">
    <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
        <h6 class="section-title bg-white text-center text-primary px-3">Location</h6>
        <h1 class="mb-5">Tourist Location</h1>
    </div>
    @foreach (var item in Model)
    {
            <div class="col-lg-7 col-md-6">
                <div class="row g-3">
                    <div class="col-lg-5 col-md-6 wow zoomIn" data-wow-delay="0.7s" style="min-height: 250px;">
                        <a class="position-relative d-block h-100 overflow-hidden" href="@Url.Action("VeCuaDiaDiem",new {@MaDiaDiem=item.MaDiaDiem})">
                            <img class="img-fluid position-absolute w-100 h-100" src="@Url.Content("~/images/imagesLocation/"+item.HinhAnh)" alt="Image" style="object-fit: cover;">
                            <div class="bg-white text-danger fw-bold position-absolute top-0 start-0 m-3 py-1 px-2">@item.Discount</div>
                            <div class="bg-white text-primary fw-bold position-absolute bottom-0 end-0 m-3 py-1 px-2">@item.TenDiaDiem</div>             
                        </a>
                    </div>
                </div>
            </div>
    }
    <a style="background-color: #86B817;border: none; color: white; padding: 15px 32px; text-align: center; text-decoration: none; display: inline-block; font-size: 16px;" href="" class="button-submit">Địa điểm khác...</a>
</div>

